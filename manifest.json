{
  "manifest_version": 3,
  "name": "Web AI Assistant",
  "version": "1.0.0",
  "description": "A Vue-based Chrome extension with AI-powered sidepanel",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png"
  },
  "permissions": [
    "sidePanel",
    "activeTab"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Web AI Assistant"
  },
  "background": {
    "service_worker": "assets/background.js"
  }
}